{
  "name": "multirepo-ott",
  "version": "2.17.2",
  "description": "",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production webpack",
    "dev": "node_modules/.bin/webpack-dev-server",
    "watch": "node_modules/.bin/webpack --progress --colors --watch",
    "test": "NODE_ENV=test karma start --color",
    "release": "node_modules/.bin/standard-version",
    "publish": "git push --follow-tags --no-verify origin master",
    "eslint": "node_modules/.bin/eslint . --color",
    "flow": "node_modules/.bin/flow check",
    "commit:dist": "git add --force --all dist && (git commit -m 'chore: update dist' || exit 0)",
    "precommit": "node_modules/.bin/lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "standard-version": {
    "scripts": {
      "postbump": "yarn run build && npm run commit:dist"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "playkit-js-providers-core": "^1.0.0",
    "js-logger": "^1.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "eslint": "^3.10.0",
    "flow-bin": "latest",
    "karma-cli": "^1.0.1",
    "lint-staged": "^7.2.0",
    "mocha-cli": "^1.0.1",
    "standard-version": "^4.2.0",
    "webpack": "latest",
    "webpack-dev-server": "latest"
  },
  "keywords": [],
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaltura/playkit-js-providers.git"
  },
  "bugs": {
    "url": "https://github.com/kaltura/playkit-js-providers/issues"
  },
  "homepage": "https://github.com/kaltura/playkit-js-providers#readme"
}
